<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/black"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/posterPlaceHolder"
            android:layout_width="145dp"
            android:layout_height="185dp"
            android:background="@color/grey" />

        <View
            android:id="@+id/movieTitleTv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/posterPlaceHolder"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:background="@color/grey"
             />

        <View
            android:id="@+id/genreTv"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_below="@+id/movieTitleTv"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:textColor="#878D95"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/dotIv"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse"
            android:layout_toEndOf="@+id/genreTv"
            android:layout_below="@+id/movieTitleTv"

            />

        <View
            android:id="@+id/movieDurationTv"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_below="@+id/movieTitleTv"
            android:layout_marginStart="5dp"
            android:background="@color/grey"
            android:layout_toEndOf="@+id/dotIv"
            android:textColor="#878D95"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

</layout>